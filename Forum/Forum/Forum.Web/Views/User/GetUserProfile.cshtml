@model Forum.Application.Users.Models.ResponseModels.UserAccountModel

@{
	ViewData["Title"] = "Profile";
}

<hr />

<div class="container mt-4 mb-4 p-3 d-flex justify-content-center">
	<div class="d-flex flex-column align-items-center gap-2 card p-4 w-50">
		<div class="d-flex border border-1 flex-column justify-content-center align-items-center">
			<img src="@Model.ImageUrl" alt="User Image" width="190" height="190">
		</div>

		<div class="text-dark fw-bold">Username: @Model.UserName</div>
		<div class="text-dark fw-bold">Email: @Model.Email</div>
		<div class="text-dark fw-bold">Name: @Model.Name</div>
		<div class="text-dark fw-bold">Last Name: @Model.LastName</div>
		<div class="text-dark fw-bold">Birth Date: @Model.BirthDate</div>

		@if (User.IsInRole("Admin"))
		{
			<div class="d-flex">
				<a asp-action="ChangePassword" class="btn btn-outline-primary">Change Password</a>
			</div>
		}
		else
		{
			<div class="d-flex">
				<a href="/editprofile" class="btn btn-outline-primary">Edit Profile</a>
				<a asp-action="ChangePassword" class="btn btn-outline-primary">Change Password</a>
			</div>
		}

		<div class="px-2 rounded date">
			<span class="join">Joined @Model.CreatedAt.ToString("MMM"), @Model.CreatedAt.Year</span>
		</div>
	</div>
</div>
